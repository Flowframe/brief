{
    "version": "0.0.1",
    "name": "flowframe/brief",
    "description": "Build mail templates for PHP with Brief",
    "keywords": [
        "flowframe",
        "brief"
    ],
    "homepage": "https://github.com/flowframe/brief",
    "license": "MIT",
    "authors": [
        {
            "name": "Lars Klopstra",
            "email": "lars@flowframe.nl",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "pestphp/pest": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Flowframe\\Brief\\": "src"
        }
    },
    "autoload-dev": {
        "files": [
            "tools/code-to-docs.php"
        ],
        "psr-4": {
            "Flowframe\\Brief\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
